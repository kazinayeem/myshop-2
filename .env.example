# App Configuration
PORT=4000

# MongoDB
MONGO_URI=mongodb://localhost:27017/ecommerce
ATLAS_URI=your_mongodb_atlas_connection_string

# Gmail SMTP (for nodemailer)
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_email_password_or_app_password

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# SSLCommerz Payment Gateway
SSLCZ_STORE_ID=your_sslcommerz_store_id
SSLCZ_STORE_PASSWORD=your_sslcommerz_store_password

# Environment Mode
IS_LIVE=false

# URLs
FRONTEND_URL=https://your-frontend-url.com
SERVER_URL=https://your-backend-url.com
